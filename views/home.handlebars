
<section class="main-content-wrapper section_padding_100">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-12">
                
                <!-- Gazette Welcome Post -->

                <div class="gazette-todays-post section_padding_100_50">
                    <div class="gazette-heading">
                        <h4>Articles</h4>
                    </div>
                    <!-- Single Today Post -->
                {{#each article}}
                    <div class="gazette-single-todays-post d-md-flex align-items-start mb-50">
                        <div class="todays-post-thumb">
                            <img src="{{this.image}}" alt="">
                        </div>
                        <div class="todays-post-content">
                            <!-- Post Tag -->
                            <div class="gazette-post-tag">
                                <button type="button" class="save" data-id={{this._id}}>Save</button>
                            </div>
                            <h3><a href="{{this.link}}" class="font-pt mb-2" target="_blank">{{this.title}}</a></h3>
                            {{!-- <span class="gazette-post-date mb-2">March 29, 2016</span> --}}
                            <p>{{this.summary}}</p>
                        </div>
                    </div>
                {{/each}}
                </div>
            </div>

        </div>
    </div>
</section>
    