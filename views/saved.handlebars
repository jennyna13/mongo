<section class="main-content-wrapper section_padding_100">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-12">
                
                <!-- Gazette Welcome Post -->

                <div class="gazette-todays-post section_padding_100_50">
                    <div class="gazette-heading">
                        <h4>Saved Articles</h4>
                    </div>
                    <!-- Single Today Post -->
             {{#if article}}
                {{#each article}}
                    <div class="gazette-single-todays-post d-md-flex align-items-start mb-50">
                        <div class="todays-post-thumb">
                            <img src="{{result.image}}" alt="">
                        </div>
                        <div class="todays-post-content">
                            <!-- Post Tag -->
                            <div class="gazette-post-tag">
                                <button type="button" class="delete" data-id={{result._id}}>Delete</button>
                                <button type="button" class="comment" data-id={{result._id}}>Comment</button>
                            </div>
                            <h3><a href="{{this.link}}" class="font-pt mb-2" target="_blank">{{result.title}}</a></h3>
                            {{!-- <span class="gazette-post-date mb-2">March 29, 2016</span> --}}
                            <p>{{result.summary}}</p>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                    <div class="todays-post-content">
                        <div class="gazette-post-tag">
                            <h4>You have no saved articles.</h4>
                        </div>
                    </div>
            {{/if}}
                </div>
            </div>

        </div>
    </div>
</section>
    